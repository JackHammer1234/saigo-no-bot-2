const eco = require("../../economia.js"); // ajusta ruta si tu archivo est√° en otro lado
const { SlashCommandBuilder } = require("discord.js");

module.exports = {
  data: new SlashCommandBuilder()
    .setName("hibridospin")
    .setDescription("Tira un spin con 1/10 chance de ganar un h√≠brido"),

  async execute(interaction) {
    const userId = interaction.user.id;

    // Probabilidad 1/10
    const gano = Math.random() < 0.9;

    if (gano) {
      await eco.agregarItem(userId, "hibrido");

      return interaction.reply({
        content: "üî• **BROOO, TE SALI√ì UN H√çBRIDOOO SPEAKINGHEADFIRE**",
        ephemeral: false
      });
    } else {
      return interaction.reply({
        content: "vaya malo jaja",
        ephemeral: false
      });
    }
  }
};
